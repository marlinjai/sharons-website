# .env.example
# Copy this file to .env.local and fill in the values

# Admin Authentication
ADMIN_PASSWORD=your-secure-admin-password
JWT_SECRET=your-32-character-random-string

# Database (optional - defaults to ./data/blog.db)
DATABASE_PATH=./data/blog.db

# S3 Image Upload (optional - leave empty to use external URLs only)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=

# Resend API (for newsletter)
RESEND_API_KEY=your-resend-api-key

# OpenAI API (optional - for AI writing assistant)
OPENAI_API_KEY=your-openai-api-key

